.container__header
    padding-top 50px
    display flex
    justify-content space-between
    +adapt(992px)
        flex-direction column
        align-items center
        justify-content center

.block__logo
    width 460px
    height 90px
    +adapt(768px)
        width 400px
        height 70px
    +adapt(480px)
        width 310px
        height 50px

.logo__link
    display block
    max-width 100%
    height 100%
.logo__img
    display block
    max-width 100%
    height 100%
.block__brand
    +adapt(992px)
        margin-top 40px
.block__brand--svg
    fill red
    width 180px
    height 35px
    +adapt(768px)
        width 150px
        height 30px
    +adapt(480px)
        width 130px
        height 25px