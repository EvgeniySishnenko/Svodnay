.container__project
    position: relative 
    overflow hidden
    &:after
        content ''
        display block
        position absolute
        z-index -10
        top 50px
        left 180px
        width 190px
        height 380px
        background-image: url('../images/about.png')
        background-size: 100%
    &:before
        content ''
        display block
        position absolute
        z-index -10
        bottom 0
        left 120px
        width 90px
        height 300px
        background-image: url('../images/partners.png')
        background-size: 100%
        +adapt(768px)
            display none
.block__project
    padding 150px 160px
    &:after
        content ''
        display block
        position absolute
        z-index -10
        bottom 100px
        right -190px
        width 367px
        height 367px
        background-image: url('../images/bckg_1.png')
        background-size: 100%
        +adapt(480px)
            display none
    &:before
        content ''
        display block
        position absolute
        z-index -10
        bottom 300px
        left -200px
        width 483px
        height 483px
        background-image: url('../images/bckg_1.png')
        background-size: 100%
        +adapt(768px)
            display none
    +adapt(1400px)
        padding 100px 100px
    +adapt(992px)
        padding 40px 20px
    +adapt(768px)
        padding 40px gap_mob 
.h2__title
    position relative
    z-index 10
    font-family 'GothamProBlack'
    font-size 72px
    text-transform uppercase
    +adapt(1400px)
        font-size 52px
    +adapt(992px)
        font-size 42px
    +adapt(480px)
        font-size 32px
.project__description
    width 770px
    margin 160px auto
    p
        font-family 'DINPro'
        color black
        font-size 24px
    +adapt(1400px)
        width 100%
        margin 50px auto
    +adapt(992px)
        margin 30px auto
        font-size 20px
        p
            font-size 24px
    +adapt(768px)
        p
            font-size 18px
.project__images
    display flex
    justify-content center
    align-items center
    height 60px
     +adapt(1400px)
        margin 50px
    +adapt(992px)
        margin 30px
    +adapt(768px)
        display block
.wrap__images
    margin-right 20px
    &:last-child
        margin-right 0 
    +adapt(768px)
        margin-bottom 20px   
        &:last-child 
            margin-bottom 0
.project--margin-top
    margin-top 160px
    +adapt(1400px)
        margin-top  100px
    +adapt(992px)
        margin-top  40px
.item1,
.item3
    width 320px
    +adapt(480px)
        width 240px
.item2
    width 240px
.project-img
    display block
    max-width 100%