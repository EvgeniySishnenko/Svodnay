.container__story
    position: relative 
    overflow hidden
    &:after
        content ''
        display block
        position absolute
        z-index -10
        top 100px
        right 100px
        width 110px
        height 110px
        background-image: url('../images/bg_pink.png')
        background-repeat no-repeat
        background-size: 100%
        z-index 5
        +adapt(480px)
            display none
    &:before
        content ''
        display block
        position absolute
        z-index -10
        top 100px
        left 150px
        width 90px
        height 390px
        background-image: url('../images/text.png')
        background-repeat no-repeat
        background-size: 100%
        z-index 5
        +adapt(1400px)
            display none
.block__story
    padding 150px 160px
    background-color #FB454B
    &:after
        content ''
        display block
        position absolute
        z-index -10
        bottom 600px
        right 50px
        width 328px
        height 328px
        background-image: url('../images/bg_pink.png')
        background-repeat no-repeat
        background-size: 100%
        z-index 5
        +adapt(480px)
            display none
    &:before
        content ''
        display block
        position absolute
        z-index -10
        bottom 100px
        left -400px
        width 650px
        height 650px
        background-image: url('../images/bg_pink.png')
        background-repeat no-repeat
        background-size: 100%
        z-index 5
    +adapt(1400px)
        padding 100px 100px
    +adapt(992px)
        padding 40px 20px
    +adapt(768px)
        padding 40px gap_mob 

.story__description
    position relative
    z-index 10
    width 770px
    margin 60px auto
    p
        font-family 'DINPro'
        color #ffffff
        font-size 24px
    +adapt(1400px)
        width 100%
        margin 30px auto
    +adapt(992px)
        margin 20px auto
        font-size 20px
        p
            font-size 24px
    +adapt(768px)
        p
            font-size 18px
.slider
    position relative
    z-index 20
    width 100%
    // margin-bottom 80px
    
.wrap_controls
    height 100px
    position relative 
    background-color black 
    padding-left gap
    display flex
    +adapt(768px)
        flex-wrap wrap
        height auto
    +adapt(768px)
        padding-left gap_mob
.controls-left,
.controls-right
    position relative
    width 50%
    height 100%
    +adapt(768px)
        width 100%
.controls-left
    +adapt(768px)
        order 2
        margin-top 30px
.controls-right
    display flex
    padding 30px 0 0 80px
    position relative
    +adapt(1200px)
         padding 30px 0 0 40px
    +adapt(768px)
        order 1
        padding 10px gap_mob 0 0
        justify-content flex-end
    &:after
        content ''
        display block
        position absolute
        top 30px
        left 40px
        width 1px
        height 30px
        background-color #454545
        +adapt(1200px)
            left 20px
        +adapt(768px)
            display none
.controls-right--item
    margin-left 40px
    &:first-child
        margin-left 0
    +adapt(1200px)
        margin-left 20px
.right--item-archive
    font-family 'DINPro'
    color pink
    font-size 16px
    +adapt(1200px)
        font-size 14px
.right--item-link
    font-family 'DINProB'
    color #ffffff
    font-size 24px
    +adapt(1200px)
        font-size 18px
.slider__list
    margin-top 30px
.wrap__slider-content
    display flex
    justify-content center
    width 100%
    height 100
.slider__link
    display flex
    justify-content center
    
.slider__image
    display block
    max-width 100%
   
.one-slide
    +adapt(600px)
        height 400px   
    +adapt(480px)
        height 300px
     +adapt(320px)
        height 250px
    .slider__link
        +adapt(600px)
            height 400px  
        +adapt(480px)
            height 300px
        +adapt(320px)
            height 250px
.two-slides
    width 100%
    +adapt(1200px)
        height 350px
    +adapt(768px)
        .wrap__slider-content
            display block
        height 430px
    +adapt(600px)
        height 400px 
    +adapt(480px)
        height 350px
    +adapt(375px)
        height 300px
    +adapt(320px)
        height 250px
    .slider__link
        width 49%
        margin-right 2%
        &:last-child 
            margin-right 0
        +adapt(1200px)
            height 350px
        +adapt(768px)
            width 100%
            margin-right 0
            height 350px
            height auto
            margin-top 10px
            &:first-child 
                margin-top 0
        +adapt(600px)
            height 400px    
        +adapt(480px)
            height 350px
        +adapt(375px)
            height 300px
        +adapt(320px)
            height 250px